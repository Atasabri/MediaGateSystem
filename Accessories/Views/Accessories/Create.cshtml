@using (Ajax.BeginForm("Addcolor", new AjaxOptions { UpdateTargetId = "Colors", HttpMethod = "Post", InsertionMode = InsertionMode.Replace }))
{
    <div class="form-group">
        <label class="control-label col-md-2">Color</label>
        <div class="col-md-10">
            <input id="Text1" type="text" class="form-control" name="color"required="Required" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Color" class="btn btn-default" />
        </div>
    </div>
    <br/>
    <div id="Colors">
        <table class="table">
            @if (Session["Colors"] != null)
            {
                foreach (var item in Session["Colors"] as List<color>)
                {
                    <tr>
                     <td>@item.Name</td> 
                    </tr>
                }
            }
        </table>
    </div>
}

